package com.medium;

public class Palindrome {
	public static void main(String[] args) {
		String word="madam1";
		char [] wordsArrays=word.toCharArray();
		char ch;
		String reverseWord="";
		for(int i=wordsArrays.length-1;i>=0;i--) {
			ch=word.charAt(i);
			reverseWord=reverseWord+ch;
		}
		System.out.println(reverseWord);
	}

}
